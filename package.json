{
  "name": "vite-plugin-svelte-checker",
  "version": "0.1.2",
  "description": "Vite plugin to check Svelte projects.",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsup src/index.ts --format esm --dts",
    "watch": "tsup src/index.ts --format esm --dts --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FabianCarrasco/vite-plugin-svelte-checker.git"
  },
  "keywords": [
    "svelte"
  ],
  "author": "FabianCarrasco",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FabianCarrasco/vite-plugin-svelte-checker/issues"
  },
  "homepage": "https://github.com/FabianCarrasco/vite-plugin-svelte-checker#readme",
  "devDependencies": {
    "@types/node": "^22.9.0",
    "bun-types": "^1.1.34",
    "shiki": "^1.24.1",
    "svelte": "^5.2.2",
    "svelte-check": "^4.0.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.11"
  },
  "peerDependencies": {
    "vite": ">=5.0.0"
  },
  "dependencies": {
    "@shikijs/cli": "^1.24.1",
    "chalk": "^5.3.0",
    "strip-ansi": "^7.1.0",
    "tsup": "^8.3.5"
  }
